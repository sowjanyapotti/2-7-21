import java.util.*;
class codechef
{
    public static void main(String args[])
    {
        int n;
        Scanner sc=new Scanner(System.in);
        n=sc.nextInt();
        if(n>=0 && n<=1000)
        {
            if(n%4==0)
            {
                System.out.print((n+1));
            }
            else
            {
               System.out.print((n-1));
            }
        }
    }
}



